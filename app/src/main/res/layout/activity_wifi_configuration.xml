<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.alwaystinkering.wifi.WifiConfiguration">

    <LinearLayout
        android:id="@+id/connectedColorLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">
        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight=".8"
            android:text="@string/pick_connected_color_text"/>
        <TextView
            android:id="@+id/connectedColorPreview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".2"/>
    </LinearLayout>

    <CheckBox
        android:id="@+id/displaySSIDLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_network_checkbox_text"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />

</LinearLayout>
